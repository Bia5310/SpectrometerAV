<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="40"
             x:Class="SpectrometrAV.CustomSlider"
             x:Name="root">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"></ColumnDefinition>
      <ColumnDefinition Width="60"></ColumnDefinition>
    </Grid.ColumnDefinitions>
    
    <Slider x:Name="Slider" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
    <TextBox x:Name="TextBox" Grid.Column="1" HorizontalAlignment="Stretch" Margin="2" VerticalAlignment="Center" TextAlignment="Center"></TextBox>
  </Grid>
  
</UserControl>
